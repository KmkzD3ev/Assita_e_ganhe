<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmkz.xuuDiamondsRBXSkins.activities.AchievementsActivity"
    android:background="@color/grey_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <!-- Toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_toolbar_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/close_img"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_close"
                    android:padding="15dp"
                    app:tint="@color/white"
                    android:layout_gravity="end"
                    android:transitionName="imageTransition"
                    android:contentDescription="@string/close" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font2"
                    android:text="@string/achievements"
                    android:textColor="@color/white"
                    android:textSize="19sp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_mxlarge" />

            </LinearLayout>

            <!-- Achievements -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_medium">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/lyt_achieve_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/font2"
                            android:text="@string/view_50_video_ads"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:src="@drawable/coin_icon"
                                android:layout_weight="0.2"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txt_ac_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_points"
                                android:fontFamily="@font/font2"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:text="100"
                                android:textColor="@color/indigo_400"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:layout_weight="0.1"
                                tools:ignore="HardcodedText" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6" />

                            <Button
                                android:id="@+id/btn_ac_one"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_gravity="end"
                                android:background="@drawable/shape_round_corner"
                                android:fontFamily="@font/font2"
                                android:paddingTop="3dp"
                                android:text="@string/uncompleted"
                                android:textColor="@color/white"
                                android:layout_weight="0.1"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_ac_one"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_marginTop="10dp"
                            android:progress="10"
                            android:progressBackgroundTint="@color/colorPrimary"
                            android:progressTint="@color/colorPrimaryDark"
                            android:visibility="visible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_medium">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/lyt_achieve_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/font2"
                            android:text="@string/view_100_video_ads"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:src="@drawable/coin_icon"
                                android:layout_weight="0.2"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txt_ac_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_points"
                                android:fontFamily="@font/font2"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:text="200"
                                android:textColor="@color/indigo_400"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:layout_weight="0.1"
                                tools:ignore="HardcodedText" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6" />

                            <Button
                                android:id="@+id/btn_ac_two"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_gravity="end"
                                android:background="@drawable/shape_round_corner"
                                android:fontFamily="@font/font2"
                                android:paddingTop="3dp"
                                android:text="@string/uncompleted"
                                android:textColor="@color/white"
                                android:layout_weight="0.1"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_ac_two"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_marginTop="10dp"
                            android:progress="50"
                            android:progressBackgroundTint="@color/colorPrimary"
                            android:progressTint="@color/colorPrimaryDark"
                            android:visibility="visible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_medium">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/lyt_achieve_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/font2"
                            android:text="@string/spin_50_times"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:src="@drawable/coin_icon"
                                android:layout_weight="0.2"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/txt_ac_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_points"
                                android:fontFamily="@font/font2"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingEnd="10dp"
                                android:text="300"
                                android:textColor="@color/indigo_400"
                                android:textSize="17sp"
                                android:gravity="center"
                                android:layout_weight="0.1"
                                tools:ignore="HardcodedText" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6" />

                            <Button
                                android:id="@+id/btn_ac_three"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_gravity="end"
                                android:background="@drawable/shape_round_corner"
                                android:fontFamily="@font/font2"
                                android:paddingTop="3dp"
                                android:text="@string/uncompleted"
                                android:textColor="@color/white"
                                android:layout_weight="0.1"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_ac_three"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_marginTop="10dp"
                            android:progress="50"
                            android:progressBackgroundTint="@color/colorPrimary"
                            android:progressTint="@color/colorPrimaryDark"
                            android:visibility="visible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>